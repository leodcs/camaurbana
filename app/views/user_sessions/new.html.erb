<h1><%= t '.title' %></h1>
</br>

	<% if @user_session.errors.has_key? :base %>
		<div id="error_explanation">
			<%= @user_session.errors[:base].join(',') %>
		</div>
	<% end %>


<%= form_for @user_session do |f| %>
	<p>
		<%= f.label t('activemodel.attributes.user_session.email') %>
		<%= f.text_field :email %>
		<%= error_tag @user_session, :email %>
	</p>
	<p>
		<%= f.label t('activemodel.attributes.user_session.password') %>
		<%= f.password_field :password %>
		<%= error_tag @user_session, :password %>
	</p>
	<p>
		<%= f.submit t('helpers.submit.user_session.create') %> 
	</p>
<% end %>

